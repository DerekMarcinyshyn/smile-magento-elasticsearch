<config>
    <modules>
        <Smile_SearchOptimizer>
            <version>1.0.0</version>
        </Smile_SearchOptimizer>
    </modules>
    <global>
        <models>
            <smile_searchoptimizer>
                <class>Smile_SearchOptimizer_Model</class>
                <resourceModel>smile_searchoptimizer_resource</resourceModel>
            </smile_searchoptimizer>
            <smile_searchoptimizer_resource>
                <class>Smile_SearchOptimizer_Model_Resource</class>
                <entities>
                    <optimizer><table>smile_searchoptimizer_optimizer</table></optimizer>
                    <optimizer_store><table>smile_searchoptimizer_optimizer_store</table></optimizer_store>
                </entities>
            </smile_searchoptimizer_resource>
        </models>
        <blocks>
            <smile_searchoptimizer>
                <class>Smile_SearchOptimizer_Block</class>
            </smile_searchoptimizer>
        </blocks>
        <helpers>
            <smile_searchoptimizer>
                <class>Smile_SearchOptimizer_Helper</class>
            </smile_searchoptimizer>
        </helpers>
        <resources>
            <smile_searchoptimizer_setup>
                <setup>
                    <module>Smile_SearchOptimizer</module>
                </setup>
            </smile_searchoptimizer_setup>
        </resources>
        <events>
            <smile_elasticsearch_index_create_before>
                <observers>
                    <add_stats_mapping_to_index>
                        <class>smile_searchoptimizer/observer</class>
                        <method>addStatsMappingToIndex</method>
                    </add_stats_mapping_to_index>
                </observers>
            </smile_elasticsearch_index_create_before>
            <smile_elasticsearch_index_install_before>
                <observers>
                    <create_session_mapping_template>
                        <class>smile_searchoptimizer/observer</class>
                        <method>createSessionMappingTemplate</method>
                    </create_session_mapping_template>
                    <copy_old_data>
                        <class>smile_searchoptimizer/observer</class>
                        <method>copyOldData</method>
                    </copy_old_data>
                </observers>
            </smile_elasticsearch_index_install_before>
            <smile_elasticsearch_query_assembled>
                <observers>
                    <add_optimizers>
                        <class>smile_searchoptimizer/observer</class>
                        <method>addOptimizers</method>
                    </add_optimizers>
                </observers>
            </smile_elasticsearch_query_assembled>
        </events>
        <smile_searchoptimizer>
            <optimizer_models>
                <constant_score>smile_searchoptimizer/optimizer_constantScore</constant_score>
                <popularity>smile_searchoptimizer/optimizer_popularity</popularity>
                <!--constant_score>smile_searchoptimizer/optimizer_popularity</constant_score-->
            </optimizer_models>
            <elasticsearch>
                <tracking_indexers>
                    <popularity>
                        <class>eu.smile.es.tracking.indexer.magento.PopularProduct</class>
                    </popularity>
                    <session>
                        <class>eu.smile.es.tracking.indexer.magento.CustomerSession</class>
                        <index>magento-session</index>
                        <index_per_date>1</index_per_date>
                    </session>
                </tracking_indexers>
                <duplicated_types>
                    <stats/>
                </duplicated_types>
            </elasticsearch>
        </smile_searchoptimizer>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <smile_searchoptimizer>
                    <file>smile/searchoptimizer.xml</file>
                </smile_searchoptimizer>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <smile_searchoptimizer before="Mage_Adminhtml">Smile_SearchOptimizer_Adminhtml</smile_searchoptimizer>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>